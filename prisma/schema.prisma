generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
}

model LandingContent {
  id               Int      @id @default(autoincrement())
  heroTitle        String
  heroSubtitle     String   @db.Text
  heroImage        String?
  greetingName     String
  greetingPosition String
  greetingMessage  String   @db.Text
  greetingPhoto    String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Partner {
  id        Int      @id @default(autoincrement())
  name      String
  logo      String
  createdAt DateTime @default(now())
}

model Member {
  id         Int      @id @default(autoincrement())
  name       String
  university String
  logo       String
  createdAt  DateTime @default(now())
}
